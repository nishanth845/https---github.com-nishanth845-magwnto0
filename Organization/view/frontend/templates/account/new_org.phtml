<script type="text/javascript">
    require([
        'jquery'
    ], function ($) {
        var url = '<?= $block->escapeUrl($block->getValidateTCUrl()); ?>';
        $(".block-organization-create .action").click(function(){
            if($(".tc_id").val().length){
                var id = $(".tc_id").val();
                $(".mage-error").hide();
                validateTC(id);
